<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user, 200 %>
    </section>
    <section class="stats">
      <div class="div-center">
        <%= render 'shared/stats' %>
      </div>
      <br/><br/>
   </section>
  </aside>
  <div class="col-md-8">
    <h3><%= link_to "#{@user.name} #{@user.surname}", @user %>'s <%= @title %></h3>
    <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>