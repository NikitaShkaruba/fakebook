<% provide(:title, 'Edit your bio') %>
<h1>Edit your bio</h1>

<%= form_for(@user) do |f| %>
    <% render 'shared/error_messages' %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Change avatar!</a>
    </div>

    <%= f.label :email %>
    <%= f.email_field :mail, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :date_of_birth %>
    <%= f.text_field :date_of_birth, class: 'form-control' %>

    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>

    <%= f.label :profession %>
    <%= f.text_field :profession, class: 'form-control' %>

    <%= f.label :status %>
    <%= f.text_field :status, class: 'form-control' %>

    <%= f.label :phone_number %> <br/>
    <%= telephone_field(@user, :phone_number) %> <br/>

    <%= f.label :relationship_status %> <br/>
    <%= select_tag 'relationship status', '<option>None</option><option>Single</option><option>Engaged</option><option>Actively searching</option><option>Passively searching</option>'.html_safe %> <br/>

    <%= f.label :gender %> <br/>
    <%= radio_button_tag(:gender, 'male') %>
    <%= label_tag(:gender_male, "I'm a man!") %>
    <%= radio_button_tag(:gender, 'female') %>
    <%= label_tag(:gender_female, "I'm a woman!") %>
    <br/><br/>

    <%= f.submit 'Confirm changes' %>
<% end %>

